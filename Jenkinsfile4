#!/usr/bin/env groovy

@Library('shared-library@master') _ //master or whatever branch

pipeline {
    agent none
    stages {
        stage('Example Build') {
            agent { docker 'maven:3-alpine' }
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
            }
        }
        stage('Example Test') {
            agent { docker 'openjdk:8-jre' }
            steps {
                echo 'Hello, JDK'
                sh 'java -version'
            }
        }
        stage ('Check logs') {
                    steps {
                        filterLogs ('WARNING', 50)
                    }
                }
    }
}
